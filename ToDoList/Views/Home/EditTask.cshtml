@model ToDoList.Models.UserTask

<div class="d-flex justify-content-center bg-light pt-5 pb-5">
    <div class="card shadow-lg p-4 rounded-4" style="width: 400px;">
        <h2 class="text-center mb-4 fw-bold">Görev Düzelt</h2>

        <form asp-action="EditTask" asp-controller="Home" method="post" novalidate>

            <input type="hidden" name="id" value="@Model.Id"/>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Görev Açıklaması</label>
                <textarea asp-for="Description" class="form-control form-control-lg" rows="5">@Model.Description</textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">Kaydet</button>
        </form>

        <a href="/Home/Index" class="btn btn-secondary btn-lg w-100">Geri Dön</a>
    </div>
</div>  