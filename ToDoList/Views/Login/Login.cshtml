@model ToDoList.Models.ViewModels.LoginViewModel

@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Giriş Yap";
}
<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg p-4 rounded-4" style="width: 380px;">
        <h2 class="text-center mb-4 fw-bold">Giriş Yap</h2>

        <form asp-action="Login" method="post" novalidate>
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
                <input asp-for="Username" class="form-control form-control-lg" placeholder="Kullanıcı adınızı girin" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="form-label">Parola</label>
                <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Parolanızı girin" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">Giriş Yap</button>
        </form>

        <div class="text-center">
            <span>Hesabınız yok mu?</span>
            <a asp-action="Register" asp-controller="Login" class="btn btn-outline-primary btn-sm ms-2">Kayıt Ol</a>
        </div>
    </div>
</div>
