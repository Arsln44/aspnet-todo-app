<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - ToDoList</title>
    <link rel="icon" type="image/png" href="~/icons/appicon.png" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <!-- Navbar (İsteğe bağlı) -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
        <div class="container">
            <a class="navbar-brand me-auto">
                <img src="@Url.Content("~/icons/appicon.png")" alt="Logo" width="40" height="40" class="me-2" />
                ToDoList
            </a>
        </div>
    </nav>

    <!-- Sayfa içeriği burada gösterilecek -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
