<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - ToDoList</title>
    <link rel="icon" type="image/png" href="~/icons/appicon.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <!-- Navbar: Kullanıcı giriş yaptıktan sonra görünen navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand me-auto">
                <img src="@Url.Content("~/icons/appicon.png")" alt="Logo" width="40" height="40" class="me-2" />
                ToDoList
            </a>
            <div class="d-flex align-items-center">
                <span class="navbar-text text-white me-3">@ViewData["user"]</span>
                <!-- Görev Ekle Butonu -->
                <a href="/Home/CreateTask" class="btn btn-outline-light me-2">Görev Ekle</a>

                <!-- Çıkış Yap Butonu -->
                <form asp-action="Logout" asp-controller="Login" method="post" class="d-inline" novalidate>
                    <button class="btn btn-danger" type="submit">Çıkış Yap</button>
                </form>
            </div>
        </div>
    </nav>

    <!-- Sayfa İçeriği Burada Görüntülenir -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
